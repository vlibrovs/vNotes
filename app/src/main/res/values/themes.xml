<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_secondary</item>
        <item name="colorOnPrimary">@color/dark_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_placeholder</item>
        <item name="colorSecondaryVariant">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/dark_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="DeleteButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
</resources>